# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Deployment Configuration
DEPLOYMENT_ENV=local
HOST_IP=localhost
PUBLIC_IP=localhost

# Backend Configuration
API_V1_STR=/api/v1
PROJECT_NAME="GenAI Multi-App Platform"
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# AWS Configuration (Required for AI features)
# Replace with your actual AWS credentials
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Models - Using faster Claude 3 Haiku
BEDROCK_PRIMARY_MODEL=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_FALLBACK_MODEL=anthropic.claude-3-haiku-20240307-v1:0

# Dynamic URLs based on deployment environment
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# React Frontend Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_BACKEND_URL=http://localhost:8000
REACT_APP_AI_CHAT_URL=http://localhost:8501
REACT_APP_DOCUMENT_ANALYSIS_URL=http://localhost:8502
REACT_APP_WEB_SEARCH_URL=http://localhost:8503

# Streamlit Configuration
STREAMLIT_SERVER_ADDRESS=0.0.0.0
API_BASE_URL=http://backend:8000
