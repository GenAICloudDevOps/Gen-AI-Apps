# Cloud/EC2 Environment Configuration
DEPLOYMENT_ENV=cloud
HOST_IP=0.0.0.0
PUBLIC_IP=YOUR_EC2_PUBLIC_IP_HERE

# Backend Configuration
API_V1_STR=/api/v1
PROJECT_NAME="GenAI Multi-App Platform"
VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# AWS Configuration (Required for AI features)
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Models - Using faster Claude 3 Haiku
BEDROCK_PRIMARY_MODEL=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_FALLBACK_MODEL=anthropic.claude-3-haiku-20240307-v1:0

# Cloud URLs (Replace YOUR_EC2_PUBLIC_IP_HERE with actual IP)
BACKEND_URL=http://YOUR_EC2_PUBLIC_IP_HERE:8000
FRONTEND_URL=http://YOUR_EC2_PUBLIC_IP_HERE:3000

# React Frontend Configuration
REACT_APP_API_URL=http://YOUR_EC2_PUBLIC_IP_HERE:8000/api/v1
REACT_APP_BACKEND_URL=http://YOUR_EC2_PUBLIC_IP_HERE:8000
REACT_APP_AI_CHAT_URL=http://YOUR_EC2_PUBLIC_IP_HERE:8501
REACT_APP_DOCUMENT_ANALYSIS_URL=http://YOUR_EC2_PUBLIC_IP_HERE:8502
REACT_APP_WEB_SEARCH_URL=http://YOUR_EC2_PUBLIC_IP_HERE:8503

# Streamlit Configuration
STREAMLIT_SERVER_ADDRESS=0.0.0.0
API_BASE_URL=http://backend:8000
